<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:outlineProvider="bounds"
    android:elevation="1.5dp"
    android:layout_marginBottom="@dimen/margin_recyclerView"
    >

    <TextView
        android:id="@+id/bulletin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="10sp"
        android:text="标题"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bulletin_image1"
        android:layout_height="100sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="5sp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon"
        />

    <ImageView
        android:id="@+id/bulletin_image2"
        android:layout_height="100sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon"
        />

    <ImageView
        android:id="@+id/bulletin_image3"
        android:layout_height="100sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon"
        />

    <ImageView
        android:id="@+id/bulletin_image4"
        android:layout_height="100sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="10sp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bulletin_author"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="#545454"
        android:layout_marginStart="18sp"
        android:layout_marginLeft="18sp"
        android:layout_marginBottom="10sp"
        android:text="作者"
        />

    <TextView
        android:id="@+id/bulletin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#545454"
        android:layout_marginStart="18sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:text="发布时间"
        />

    </LinearLayout>

</LinearLayout>
